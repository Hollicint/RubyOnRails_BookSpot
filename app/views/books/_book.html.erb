<div id="<%= dom_id book %> class="bookContent"">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= book.genre %>
  </p>

  <p>
    <strong>Book description:</strong>
    <%= book.book_description %>
  </p>

  <p>
    <strong>Book cost:</strong>
    <%= book.book_cost %>
  </p>

</div>
